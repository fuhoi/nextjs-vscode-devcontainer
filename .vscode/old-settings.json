{
    // # region: Theme
    "workbench.colorTheme": "Monochrome Stone Dark",
    "workbench.iconTheme": null,
    "workbench.productIconTheme": "Default",
    "workbench.tree.renderIndentGuides": "none",
    // # endregion: Theme
    // #region: Editor Style
    "editor.fontFamily": "'FiraCode Nerd Font', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.lineHeight": 1.25,
    "editor.wordWrap": "on",
    "editor.minimap.renderCharacters": false,
    // #region: Code Style
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // Editor Behavior
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    // Editor Style - Clean
    "editor.minimap.enabled": false,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "editor.scrollbar.horizontalScrollbarSize": 10,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line-thin",
    "editor.hideCursorInOverviewRuler": true,
    "editor.overtypeCursorStyle": "underline-thin",
    "editor.renderLineHighlight": "none",
    "editor.stickyScroll.enabled": false,
    "editor.inertialScroll": true,
    "workbench.list.smoothScrolling": true,
    "workbench.editor.titleScrollbarVisibility": "auto",
    "terminal.integrated.smoothScrolling": true,
    "editor.renderWhitespace": "none",
    "editor.lineNumbers": "off",
    "editor.folding": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairs": false,
    "editor.matchBrackets": "never",
    "editor.language.colorizedBracketPairs": null,
    "editor.guides.highlightActiveBracketPair": false,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": false,
    "editor.guides.bracketPairsHorizontal": false,
    "terminal.integrated.stickyScroll.enabled": false,
    "workbench.tree.enableStickyScroll": true,
    "editor.guides.indentation": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.foldingHighlight": false,
    "editor.inlayHints.enabled": "off",
    "editor.lightbulb.enabled": "off",
    "git.decorations.enabled": false,
    "scm.diffDecorations": "none",
    "explorer.decorations.badges": false,
    "explorer.decorations.colors": false,
    "editor.colorDecorators": false,
    "workbench.editor.decorations.badges": false,
    "editor.showFoldingControls": "mouseover",
    "editor.selectionHighlight": false,
    "workbench.editor.highlightModifiedTabs": false,
    "editor.occurrencesHighlight": "off",
    // Terminal Style
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.cursorWidth": 1,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.cursorStyleInactive": "outline",
    "terminal.integrated.customGlyphs": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.enableImages": true,
    // Dev Containers
    "dev.containers.dockerPath": "podman",
    // VSCode Behaviour
    "window.restoreWindows": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // git
    "git.confirmSync": false,
    "git.autofetch": true,
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.editorActionsLocation": "hidden",
    "editor.inlineSuggest.minShowDelay": 1000,
    "editor.inlineSuggest.enabled": false,
    "files.insertFinalNewline": true,
    // Auto-Completion/Suggestions	Search for editor.quickSuggestions and set all options to off
    "editor.quickSuggestionsDelay": 1000,
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    "editor.suggest.selectionMode": "never",
    "editor.suggest.preview": false,
    "typescript.suggest.enabled": false,
    // IntelliSense/Parameter Hints	Search for editor.parameterHints.enabled and set to false
    "editor.parameterHints.enabled": false,
    // Hover Popups	Search for editor.hover.enabled and set to false
    "editor.hover.enabled": "off",
    // Auto Closing Brackets/Quotes	Search for editor.autoClosingBrackets and editor.autoClosingQuotes, set both to never	
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingBrackets": "never",
    "zenMode.hideActivityBar": true,
    "zenMode.hideLineNumbers": true,
    "zenMode.hideStatusBar": true,
    "zenMode.showTabs": "single",
    "window.titleBarStyle": "custom",
    "window.customTitleBarVisibility": "windowed",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.inlineSuggest.edits.allowCodeShifting": "never",
    "editor.inlineSuggest.edits.renderSideBySide": "never",
    "editor.inlineSuggest.edits.showLongDistanceHint": false,
    "editor.inlineSuggest.experimental.emptyResponseInformation": false,
    "editor.inlineSuggest.showToolbar": "never",
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.screenReaderAnnounceInlineSuggestion": false,
    "editor.snippetSuggestions": "none",
    "editor.suggest.showStatusBar": true,
    "editor.wordBasedSuggestions": "off",
    "peacock.affectActivityBar": false,
    "peacock.affectSashHover": false,
    "peacock.affectStatusBar": false,
    "peacock.affectTitleBar": false
}
